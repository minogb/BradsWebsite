@model BradsWebsite.Models.DailyMessageModel

@Html.ValidationSummary()
<div class="row">
    <form asp-action="@(Model != null && Model.Id.HasValue ? "Edit" : "New")" method="post">
        <div class="form-group">
            <label asp-for="Category" class="control-label"></label>
            @if (Model != null && Model.Id.HasValue && Model.Id.Value > 0)
            {
                <input asp-for="Category" class="form-control" placeholder="Safety" value="@Model.Category" />
            }
            else
            {
                <input asp-for="Category" class="form-control" placeholder="Safety" />
            }
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <div class="row text-muted">

            <div class="form-group col">
                <label asp-for="Start" class="control-label"></label>
                <input asp-for="Start" class="form-control" />
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label asp-for="End" class="control-label"></label>
                <input asp-for="End" class="form-control" />
                <span asp-validation-for="End" class="text-danger"></span>
            </div>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Message" class="control-label"></label>
            <textarea class="form-control" asp-for="@Model.Message">
                @Model.Message
            </textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div><br />
        <div class="form-group">
            @if (Model != null && Model.Id.HasValue && Model.Id.Value > 0)
            {
                <input type="submit" value="Save" class="btn btn-primary" />
            }
            else
            {
                <input type="submit" value="Create" class="btn btn-primary" />
            }
        </div>
    </form>
</div>
